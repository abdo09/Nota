<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GradientButtonRounded" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gradient_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:radius">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">16dp</item>
        <item name="elevation">16dp</item>
    </style>

    <style name="RoundedCorner" parent="Widget.AppCompat.Button">

    </style>

    <style name="PrimaryItemTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/main_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:radius">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">16dp</item>
        <item name="elevation">16dp</item>
    </style>

    <style name="TextInputLayoutOrangeColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_stroke_orange_color</item>
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="enableEdgeToEdge">true</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_peekHeight">1000dp</item> // yep, that helped to skip collapsed state at initial
        <item name="behavior_hideable">true</item>
    </style>

</resources>